#include <stdio.h>
#include <stdlib.h>



int i; float factorial, num;

int main() {



    printf("Ingrese un nยบ para poder calcular su factorial\n");

    scanf("%f", &num);


    i=0; factorial= 1;


    while(i<num) {

        factorial= factorial*(num-i);


        i++;

    }

  printf("El factorial resultante es %f \n", factorial)  ;

  factorial = 1; //Se re inicializa//

  for (i=0; i<num ; i++)
    {
       factorial = factorial * (num-i);


     }
  printf("El factorial resultante hecho de fomra recursiva es %f \n ", factorial );




 return 0;



}




